# GeoPulse E2E Testing Configuration
# This file contains environment variables for E2E testing

# Frontend (UI) URL - used in CORS policies
GEOPULSE_UI_URL=http://localhost:5556

# Backend URL used by frontend (for nginx proxy within container)
GEOPULSE_BACKEND_URL=http://geopulse-backend-e2e:8080

# API Base URL for frontend (from browser perspective)
API_BASE_URL=http://localhost:8081/api

# Cookie domain for authentication (empty for localhost)
GEOPULSE_COOKIE_DOMAIN=""

# Secure cookies disabled for testing
GEOPULSE_AUTH_SECURE_COOKIES=false

# Test mode enabled
GEOPULSE_TEST_MODE=true

# PostgreSQL Database (Test Database)
GEOPULSE_POSTGRES_HOST=geopulse-postgres-e2e
GEOPULSE_POSTGRES_PORT=5432
GEOPULSE_POSTGRES_DB=geopulse_test
GEOPULSE_POSTGRES_USERNAME=geopulse_test
GEOPULSE_POSTGRES_PASSWORD=testpassword
GEOPULSE_POSTGRES_URL=jdbc:postgresql://geopulse-postgres-e2e:5432/geopulse_test

# Quarkus Datasource (for backend)
QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://geopulse-postgres-e2e:5432/geopulse_test
QUARKUS_DATASOURCE_USERNAME=geopulse_test
QUARKUS_DATASOURCE_PASSWORD=testpassword
QUARKUS_LOG_LEVEL=INFO

# MQTT disabled for testing
GEOPULSE_MQTT_ENABLED=false

GEOPULSE_JWT_PRIVATE_KEY_LOCATION=file:///app/keys/jwt-private-key.pem
GEOPULSE_JWT_PUBLIC_KEY_LOCATION=file:///app/keys/jwt-public-key.pem

# Database URL for test scripts (from host machine)
DATABASE_URL=postgresql://geopulse_test:testpassword@localhost:5433/geopulse_test
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_NAME=geopulse_test
DATABASE_USER=geopulse_test
DATABASE_PASSWORD=testpassword

# Playwright test configuration
BASE_URL=http://localhost:5556
NODE_ENV=test
CI=true

CLIENT_MAX_BODY_SIZE=2000M